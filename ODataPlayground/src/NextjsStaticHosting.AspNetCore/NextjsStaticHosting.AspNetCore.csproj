<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0;net7.0</TargetFrameworks>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>

    <!-- Upgrade to C# 9 when targetting netcoreapp3.1 so that we can use init-only properties painlessly  -->
    <LangVersion Condition="'$(TargetFramework)' == 'netcoreapp3.1'">9</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NextjsStaticHosting.AspNetCore</PackageId>
    <VersionPrefix>0.9.2</VersionPrefix>
	<VersionSuffix>preview</VersionSuffix>
    <Authors>David Nissimoff</Authors>
    <Description>Host Next.js applications in production without Node.js. The most performant way there is, on ASP .NET Core.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>aspnetcore;nextjs;next.js;next;react;nodejs;node.js;node</PackageTags>
    <ProjectUrl>https://github.com/davidnx/NextjsStaticHosting-AspNetCore</ProjectUrl>
    <RepositoryUrl>https://github.com/davidnx/NextjsStaticHosting-AspNetCore</RepositoryUrl>
	<PackageIcon>logo.png</PackageIcon>
  </PropertyGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Yarp.ReverseProxy" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
	<None Include=".\logo.png" Pack="true" PackagePath="\"/>
  </ItemGroup>
</Project>
