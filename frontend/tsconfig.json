{
    "compilerOptions": {
      "esModuleInterop": true,
      "isolatedModules": true,
      "lib": ["ESNext", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "noEmit": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ESNext",
      "useDefineForClassFields": true
    },
    "include": ["src"]
}
  